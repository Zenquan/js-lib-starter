{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "customJsxFactory",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "experimentalDecorators": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["./node_modules"]
}
